/*5)*/
create table S(
`S#` VARCHAR(2),
SNAME VARCHAR(10),
STATUS INT(2),
CITY VARCHAR(10)
);

CREATE TABLE P(
`P#` VARCHAR(2),
PNAME VARCHAR(8),
COLOR VARCHAR(6),
WEIGHT INT(2),
CITY VARCHAR(8)
);

CREATE TABLE J(
`J#` VARCHAR(2),
JNAME VARCHAR(8),
CITY VARCHAR(8)
);

INSERT INTO S VALUES
