CREATE TABLE SEMP (
EMPNO CHAR(4),
EMPNAME CHAR(20),
BASIC FLOAT,
DEPTNO CHAR(2),
DEPTHEAD CHAR(4)
);

SHOW TABLES;

describe SEMP;

/*2)*/
CREATE TABLE SDEPT (
DEPTNO CHAR(20),
DEPTNAME CHAR(15)
);

/*3)*/
INSERT INTO SDEPT ( DEPTNO,DEPTNAME)
VALUES (10, "DEVELOPMENT"),
(20, "TRAINING");

DESCRIBE SDEPT;

SELECT * FROM SDEPT;

